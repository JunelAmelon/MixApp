{% extends 'base.html.twig'  %} 
{% block otherstyles %} 
 <link rel="stylesheet" href="{{ asset('css/bootstrap-icons.css') }}"/>
 <link rel="stylesheet" href="{{ asset('css/templatemo-topic-listing.css') }}"/>
{% endblock %}
{% block content %}
 <section class="explore-section section-padding" id="section_2">
                <div class="container">

                        <div class="col-12 text-center">
                            <h2 class="mb-4">{{ "Vos projets"  | trans}}</h1>
                        </div>

                    </div>
                </div>

                <div class="container-fluid">
                    <div class="row">
                        <ul class="nav nav-tabs" id="myTab" role="tablist">
                          <li class="nav-item" role="presentation">
                                <button class="nav-link  active" id="music-tab" data-bs-toggle="tab" data-bs-target="#music-tab-pane" type="button" role="tab" aria-controls="music-tab-pane" aria-selected="false">{{ "En cours" | trans }}</button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="design-tab" data-bs-toggle="tab" data-bs-target="#design-tab-pane" type="button" role="tab" aria-controls="design-tab-pane" aria-selected="true">{{ 'Valider' | trans}}</button>
                            </li>
                        </ul>
                    </div>
                </div>
<!-- Liste des projets valider   -->
                <div class="container">
                    <div class="row">

                        <div class="col-12">
                            <div class="tab-content" id="myTabContent">
                                <div class="tab-pane fade" id="design-tab-pane" role="tabpanel" aria-labelledby="design-tab" tabindex="0">
                                    <div class="row">
                                     {% for project in projects %}
                                      {% if project.getEtatProjet() == 'valider' %}
                                        <div class="col-lg-4 col-md-6 col-12 mb-4 mb-lg-0">
                                            <div class="custom-block bg-white shadow-lg">
                                                <a href="{{ path('list_audios_by_projet', {'projetId': project.getId()}) }}">
                                                
                                                    <div class="d-flex">
                                                        <div>
                            
                                                            <h5 class="mb-2">{{ project.getNomProjet()}}</h5>

                                                            <p class="mb-0">{{ project.getDescription() }}</p>
                                                        </div>

                                                             </div>

                                                    <img src="{{ asset('images/topics/undraw_Remote_design_team_re_urdx.png') }}" class="custom-block-image img-fluid" alt="">
                                                   <div class="badge bg-design rounded-pill ms-auto"  style="width: 40%; margin-left:30%">{{ project.getEtatProjet() }}</div>
                                               
                                                </a>
                                            </div>
                                        </div> 
                                        {% endif %}
                                      {% endfor %}       
                                    </div>
                                </div>

<!-- Fin des projets valider --> 
<!-- liste des projets en cours -->   
                                <div class="tab-pane fade show active" id="music-tab-pane" role="tabpanel" aria-labelledby="music-tab" tabindex="0">
                                    <div class="row">
                                    {% for project in projects %}
                                      {% if project.getEtatProjet() == 'en attente' %}
                                        <div class="col-lg-4 col-md-6 col-12 mb-4 mb-lg-3">
                                            <div class="custom-block bg-white shadow-lg">
                                                <a href="{{ path('list_audios_by_projet', {'projetId': project.getId()}) }}">
                                                     <div class="d-flex">
                                                        <div>
                                                            <h5 class="mb-2">{{ project.getNomProjet()}}</h5>

                                                            <p class="mb-0">{{ project.getDescription()}}</p>
                                                        </div>

                                                            </div>

                                                    <img src="{{ asset('images/topics/undraw_Compose_music_re_wpiw.png') }}" class="custom-block-image img-fluid" alt="">
                                               <div class="badge bg-music rounded-pill ms-auto"  style="width: 40%; margin-left:30%">{{ project.getEtatProjet() }}</div>
                                               
                                                </a>
                                            </div>
                                        </div>
                                       {% endif %}
                                       {% endfor %}
                                   
                                    </div>
                                </div>
   <!-- liste des projets en cours --> 


                                
                            </div>

                    </div>
                </div>
            </section>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/js/bootstrap.bundle.min.js"></script>
            <script src="{{ asset('js/jquery.sticky.js') }}"></script>
            <script src="{{ asset('js/click-scroll.js') }}"></script>
            <script src="{{ asset('js/custom.js') }}"></script>

{% endblock %} 







