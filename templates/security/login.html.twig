<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
	<link rel="stylesheet" href="{{ asset('css/style.css') }}">
	<link rel="stylesheet" href="{{ asset('css/form.css') }}">
    <title>{% block title %}Page de connexion{% endblock %}</title>
      
</head>
<body class="sub-list">

    <div class="container">
        <div class="login-form">
            <a href="{{ path('app_home') }}" class="site-logo" style="font-size: 20px; text-align:center">
                <img src="{{ asset('img/logo.png') }}" alt="SolMusic">
            </a>
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}

                <label for="inputEmail" style="color:white">{{ 'Email' | trans}}</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>

                <label for="inputPassword"  style="color:white">{{ 'Mot de passe' | trans }}</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button class="btn btn-lg btn-danger" type="submit" style="margin-top: 3%;">{{ 'Se connecter' | trans }}</button>
                <p> {{ 'Vous n\'avez pas un compte ?' | trans }}  <a href="{{ path('app_register') }}" style="color:#f44336;">{{ 'Inscrivez-vous' | trans }}</a></p>
            </form>
        </div>
    </div>

    <!-- IntÃ©grer les fichiers JavaScript -->
    <script src="{{ asset('js/jquery-3.2.1.min.js') }}"></script>
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>
</body>
</html>
